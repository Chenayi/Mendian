<?xml version="1.0" encoding="utf-8"?>
<com.yaoxiaoer.mendian.widget.RootLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:titleBarRightIcon="@mipmap/go_home_icon"
    app:titleBarTitle="账目详情">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:gravity="center"
        android:lines="1"
        android:singleLine="true"
        android:text="请输入门店退款密码"
        android:textColor="@color/color_333"
        android:textSize="16sp" />


    <EditText
        android:id="@+id/et_password"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="28dp"
        android:background="@drawable/input_bg"
        android:gravity="center"
        android:inputType="numberPassword"
        android:lines="1"
        android:maxLength="8"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:singleLine="true"
        android:textSize="16sp"
        tools:text="12345678" />

    <Button
        android:id="@+id/btn_sure"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="28dp"
        android:background="@color/colorPrimary"
        android:text="确定"
        android:textColor="@color/white" />

</com.yaoxiaoer.mendian.widget.RootLayout>